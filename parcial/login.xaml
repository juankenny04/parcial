<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="parcial.Page1" NavigationPage.HasNavigationBar="False" >
    <ContentPage.Content>
        <StackLayout>
            <Label Text="EXAMEN MOMENTO 1" HorizontalTextAlignment="Center" FontSize="24" />
            <Image WidthRequest="100" HeightRequest="100" Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Text="Usuario" FontSize="20" Grid.Row="0" Grid.Column="0" />
                <Label Text="Contraseña" FontSize="20" Grid.Row="1" Grid.Column="0" />
                <Entry x:Name="txtUsuario" Placeholder="Ingrese Usuario" Grid.Row="0" Grid.Column="1"/>
                <Entry x:Name="txtContraseña" Placeholder="Contraseña" Grid.Row="1" Grid.Column="1" IsPassword="True"/>
            </Grid>
            <Button x:Name="btnIniciar" Text="INICIAR SESION" Clicked="btnIniciar_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>